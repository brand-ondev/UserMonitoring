generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Country {
  id        String   @id
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime
  User      User[]
}

/// We could not retrieve columns for the underlying table. Either it has none or you are missing rights to see them. Please check your privileges.
model Role {
  id        String        @id
  name      Enum_RoleName
  createdAt DateTime      @default(now())
  updatedAt DateTime
  User      User[]
}

/// We could not retrieve columns for the underlying table. Either it has none or you are missing rights to see them. Please check your privileges.
model Session {
  id        String   @id
  expires   DateTime
  session   String
  createdAt DateTime @default(now())
  updatedAt DateTime
  userId    String?
  User      User?    @relation(fields: [userId], references: [id])
}

model User {
  id                         String           @id
  email                      String           @unique
  emailVerified              DateTime?
  termsAndConditionsAccepted DateTime?
  name                       String?
  image                      String?
  position                   String?
  createdAt                  DateTime         @default(now())
  updatedAt                  DateTime
  roleId                     String?
  UserMonitoring             UserMonitoring[]
  Country                    Country[]
  Role                       Role?            @relation(fields: [roleId], references: [id])
  Session                    Session[]
}

model UserMonitoring {
  id          String   @id
  usage       Int
  description String
  userId      String
  createdAt   DateTime @default(now())
  User        User     @relation(fields: [userId], references: [id])
}

enum Enum_RoleName {
  Admin
  Manager
  User
}
